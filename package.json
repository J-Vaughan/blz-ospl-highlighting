{
    "name": "blz-ospl-highlighting",
    "displayName": "blz-ospl-highlighting",
    "description": "Provides syntax highlighting for the blz open-source programming language.",
    "version": "0.2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/J-Vaughan/blz-ospl-highlighting.git"
    },
    "publisher": "vaughan",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "blz",
                "aliases": [
                    "Blaze",
                    "blz",
                    "blz-ospl"
                ],
                "extensions": [
                    ".blz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "blz",
                "scopeName": "source.blz",
                "path": "./syntaxes/blz.tmLanguage.json"
            }
        ]
    }
}
